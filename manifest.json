{
  "manifest_version": 3,
  "name": "Twitter+",
  "version": "0.1",

  "description": "Basic enhancements to Twitter",

  "icons": {
    "48": "public/icon.png"
  },

  "permissions": [
    "webRequest", 
    "nativeMessaging", 
    "activeTab"
  ],
  
  "host_permissions": ["https://127.0.0.1/*", "http://127.0.0.1/*"], 

  "background": {
    "scripts": ["dist/background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["dist/content_script.js"]
    }
  ]
}